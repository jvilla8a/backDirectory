<p id="notice"><%= notice %></p>

<h1>Medics</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Coord</th>
      <th>Price</th>
      <th>Schedule</th>
      <th>Speciality</th>
      <th>Email</th>
      <th>Experience</th>
      <th>Score</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medics.each do |medic| %>
      <tr>
        <td><%= medic.name %></td>
        <td><%= medic.address %></td>
        <td><%= medic.phone %></td>
        <td><%= medic.coord %></td>
        <td><%= medic.price %></td>
        <td><%= medic.schedule %></td>
        <td><%= medic.speciality %></td>
        <td><%= medic.email %></td>
        <td><%= medic.experience %></td>
        <td><%= medic.score %></td>
        <td><%= medic.city %></td>
        <td><%= link_to 'Show', medic %></td>
        <td><%= link_to 'Edit', edit_medic_path(medic) %></td>
        <td><%= link_to 'Destroy', medic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Medic', new_medic_path %>
